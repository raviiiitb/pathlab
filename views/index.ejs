<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Path Lab: Voice Assistant</title>
    <meta name="description" content="Google Cloud Speech Recognition with Node and Socket.io">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="assets/css/main.css">
</head>

<body>
    <div class="wrapper">
        <h1>PathLab tracker: Voice Assistant</h1>

        <audio></audio>

        <br>
        <button id="startRecButton" type="button" class="button button1"> Start recording</button>
        <button id="stopRecButton" type="button" class="button button2"> Stop recording</button>
        <button id="copyButton" type="button" class="button button3" onclick="CopyToClipboard()"> Copy Text <i class="material-icons">content_copy</i></button>
        <div id="recordingStatus">&nbsp;</div>
        <br>

        <div id="copyClip" class="words" contenteditable="true" placeholder="No Speech to Text yet">
            <p id="ResultText">
                <span class="greyText">
                    <span>
            </p>
        </div>

        <br>
        <br>
    </div>

    <!-- Nlp -->
    <script src="https://unpkg.com/compromise@latest/builds/compromise.min.js"></script>

    <!-- Socket -->
    <script src="assets/js/socket.io.js"></script>

    <!-- Client -->
    <script src="assets/js/client.js"></script>
</body>

</html>
